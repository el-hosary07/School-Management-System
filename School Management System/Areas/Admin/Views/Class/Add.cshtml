@model School_Management_System.Models.Class
@{
    ViewData["Title"] = "Add Class";
    var teachers = ViewBag.Teachers as List<School_Management_System.Models.Teacher>;
}

<div class="content container-fluid">
    <div class="page-header">
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-6 col-12">
                <h5 class="text-uppercase mb-0 mt-0 page-title">Add Class</h5>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6 col-12">
                <ul class="breadcrumb float-right p-0 mb-0">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index")"><i class="fas fa-home"></i> Home</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index")">Classes</a></li>
                    <li class="breadcrumb-item"><span>Add Class</span></li>
                </ul>
            </div>
        </div>
    </div>

    <div class="page-content">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <form method="post" asp-action="Add">
                            <div class="row">
                                <!-- اليسار -->
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label asp-for="Name" class="control-label">Class Name</label>
                                        <input asp-for="Name" class="form-control" />
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Section" class="control-label">Section</label>
                                        <input asp-for="Section" class="form-control" />
                                        <span asp-validation-for="Section" class="text-danger"></span>
                                    </div>
                                </div>

                                <!-- اليمين -->
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label asp-for="TeacherId" class="control-label">Teacher</label>
                                        <select asp-for="TeacherId" class="form-control">
                                            <option value="">Select Teacher</option>
                                            @if (teachers != null)
                                            {
                                                @foreach (var teacher in teachers)
                                                {
                                                    <option value="@teacher.Id">@teacher.Name</option>
                                                }
                                            }
                                        </select>
                                        <span asp-validation-for="TeacherId" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label">Class Capacity</label>
                                        <input type="number" class="form-control" name="Capacity" value="30" min="20" max="50" />
                                    </div>
                                </div>

                                <!-- الأزرار -->
                                <div class="col-12 text-center">
                                    <button type="submit" class="btn btn-primary mr-2">
                                        <i class="fas fa-save"></i> Add Class
                                    </button>
                                    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


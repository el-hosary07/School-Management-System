@model Subject

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>المدرسين (اختياري)</label>
        @{
            var selectedTeachers = ViewBag.SelectedTeachers as int[] ?? new int[0];
        }
        @foreach (var teacher in ViewBag.Teachers as List<Teacher>)
        {
            <div class="form-check">
                <input type="checkbox" class="form-check-input"
                       name="selectedTeachers" value="@teacher.Id"
                       checked="@selectedTeachers.Contains(teacher.Id)" />
                <label class="form-check-label">@teacher.Name</label>
            </div>
        }
    </div>

    <button type="submit" class="btn btn-primary">حفظ التعديلات</button>
    <a asp-action="Index" class="btn btn-secondary">رجوع</a>
</form>

@model IEnumerable<Subject>

<div class="content container-fluid">
    <div class="page-header">
        <h5>المواد الدراسية</h5>
        <a asp-action="Add" class="btn btn-primary float-right">إضافة مادة</a>
    </div>

    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>اسم المادة</th>
                    <th>المدرسين</th>
                    <th>الإجراءات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var subject in Model)
                {
                    <tr>
                        <td>@subject.Name</td>
                        <td>
                            @if (subject.SubjectTeachers != null && subject.SubjectTeachers.Any())
                            {
                                @foreach (var st in subject.SubjectTeachers)
                                {
                                    <span class="badge badge-primary">@st.Teacher.Name</span>
                                }
                            }
                            else
                            {
                                <span class="text-muted">غير محدد</span>
                            }
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@subject.Id" class="btn btn-sm btn-primary">تعديل</a>
                            <a asp-action="Delete" asp-route-id="@subject.Id"
                               class="btn btn-sm btn-danger"
                               onclick="return confirm('متأكد؟')">حذف</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

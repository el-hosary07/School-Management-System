                                    <span class="font-weight-bold">
                                        @fee.Amount EGP
                                        <span class="badge @(fee.IsPaid ? "success" : "danger")">
                                            @(fee.IsPaid ? "Paid" : "Pending")
                                        </span>
                                    </span>
                                </div>
                            }
                        }
                        else

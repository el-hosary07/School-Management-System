                        }
                        else
                        {
                            <p class="text-muted">No attendance records</p>
                        }
                    </div>
                </div>
            </div> *@
        </div>

        <!-- الكتب المستعارة -->
        <div class="row mt-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h6><i class="fas fa-book"></i> Issued Books</h6>
                    </div>
                    <div class="card-body">
                        @if (Model.BookIssues != null && Model.BookIssues.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-sm">
                                    <thead>
                                        <tr>
                                            <th>Book</th>
                                            <th>Issue Date</th>
                                            <th>Return Date</th>
                                            <th>Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var issue in Model.BookIssues)
                                        {
                                            <tr>
                                                <td>@issue.Book.Title</td>
                                                <td>@issue.IssueDate.ToString("dd/MM/yyyy")</td>
                                                <td>@issue.ReturnDate.ToString("dd/MM/yyyy")</td>
                                                <td>
                                                    @if (issue.ReturnDate > DateTime.Now)
                                                    {
                                                        <span class="badge badge-warning">Active</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge badge-secondary">Returned</span>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <p class="text-muted">No issued books</p>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- المصروفات -->
        <div class="row mt-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h6><i class="fas fa-money-bill"></i> Fees</h6>
                    </div>
                    <div class="card-body">
                        @* @if (Model.Fees != null && Model.Fees.Any())

@model School_Management_System.Models.VM.AddTeacherVM
@{
    ViewData["Title"] = "Add Teacher";
    var subjects = ViewBag.Subjects as List<School_Management_System.Models.Subject>;
}

<div class="content container-fluid">
    <!-- Header code same as yours -->

    <div class="page-content">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <form method="post" asp-action="Add">
                            <div class="row">
                                <!-- اليسار -->
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label asp-for="Name"></label>
                                        <input asp-for="Name" class="form-control" />
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Email"></label>
                                        <input asp-for="Email" class="form-control" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Salary">Salary</label>
                                        <input asp-for="Salary" class="form-control" type="number" />
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="SubjectId">Subject</label>
                                        <select asp-for="SubjectId" class="form-control" asp-items="@(new SelectList(subjects, "Id", "Name"))">
                                            <option value="">Choose Subject</option>
                                        </select>
                                    </div>
                                </div>

                                <!-- اليمين -->
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label asp-for="Password"></label>
                                        <input asp-for="Password" class="form-control" type="password" />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                    
                                    <div class="form-group">
                                        <label asp-for="ConfirmPassword"></label>
                                        <input asp-for="ConfirmPassword" class="form-control" type="password" />
                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    </div>
                                    
                                </div>

                                <!-- الأزرار -->
                                <div class="col-12 text-center">
                                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                                    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


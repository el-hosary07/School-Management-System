@model Teacher
@{
    ViewBag.Title = "Edit Teacher";
    var classes = ViewBag.Classes as List<Class>;
}

<div class="content container-fluid">
    <div class="page-header">
        <div class="row">
            <div class="col-lg-6">
                <h5 class="text-uppercase mb-0 mt-0 page-title">Edit Teacher</h5>
            </div>
            <div class="col-lg-6">
                <ul class="breadcrumb float-right p-0 mb-0">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index")"><i class="fas fa-home"></i></a></li>
                    <li class="breadcrumb-item"><span>Edit Teacher</span></li>
                </ul>
            </div>
        </div>
    </div>

    <div class="page-content">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <form method="post" asp-action="Edit">
                            <input type="hidden" asp-for="Id" />

                            <div class="row">
                                <!-- اليسار -->
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label asp-for="Name"></label>
                                        <input asp-for="Name" class="form-control" />
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                                        <label asp-for="Email"></label>
                                        <input asp-for="Email" class="form-control" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Salary"></label>
                                        <input asp-for="Salary" class="form-control" type="in" />
                                    </div>
                                    
                                   
                                </div>

                                <!-- اليمين -->
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label asp-for="Password"></label>
                                        <input asp-for="Password" class="form-control" type="password" />
                                    </div>

                                    <div class="form-group">
                                        <label asp-for="ConfirmPassword"></label>
                                        <input asp-for="ConfirmPassword" class="form-control" type="password" />
                                    </div>
                                </div>

                                <!-- الأزرار -->
                                <div class="col-12 text-center mt-4">
                                    <button type="submit" class="btn btn-primary mr-2">Update Teacher</button>
                                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


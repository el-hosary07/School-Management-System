@model IEnumerable<Book>

@{
    ViewData["Title"] = "Books";
}

<div class="content container-fluid">
    <div class="page-header">
        <div class="row align-items-center">
            <div class="col">
                <h5 class="text-uppercase mb-0 mt-0 page-title">Books</h5>
            </div>
            <div class="col-auto float-right ml-auto">
                <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> Add Book</a>
            </div>
        </div>
    </div>

    <div class="page-content">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped mb-0">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Title</th>
                                        <th>Author</th>
                                        <th>Total Copies</th>
                                        <th>Available</th>
                                        <th>Issued</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.Any())
                                    {
                                        @for (int i = 0; i < Model.Count(); i++)
                                        {
                                            var book = Model.ElementAt(i);
                                            <tr>
                                                <td>@(i + 1)</td>
                                                <td>@book.Title</td>
                                                <td>@book.Author</td>
                                                <td><span class="badge badge-info">@book.TotalCopies</span></td>
                                                <td>
                                                    <span class="badge @(book.CopiesAvailable > 0 ? "badge-success" : "badge-danger")">
                                                        @book.CopiesAvailable
                                                    </span>
                                                </td>
                                                <td>@(book.TotalCopies - book.CopiesAvailable)</td>
                                                <td>
                                                    <a asp-action="Edit" asp-route-id="@book.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                                                    @if (book.CopiesAvailable > 0)
                                                    {
                                                        <a asp-action="IssueBook" asp-route-bookId="@book.Id" class="btn btn-sm btn-outline-success">Issue</a>
                                                    }
                                                    <form asp-action="Delete" asp-route-id="@book.Id" method="post" style="display:inline;"
                                                          onsubmit="return confirm('Are you sure?')">
                                                        <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                                    </form>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="7" class="text-center text-muted">No books found</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
